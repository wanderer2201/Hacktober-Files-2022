#include <iostream>
#include <cstring>
using namespace std;

int countWords(string input) {
    // Write your code here
int sum=1;
    for(int i=0;i<input.length();i++)
    {
        if(input[i]==' ')
            sum++;
    }
    return sum;
}

int main() {
    string input;
    getline(cin, input);
    int output = countWords(input);
    cout << output << endl;
    return 0;
}
